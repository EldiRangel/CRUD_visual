<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="640.0" prefWidth="840.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.javafxcrud.ConnectionController">

   <children>

      <!-- CONNECTION PANEL -->
      <Pane layoutX="576.0" layoutY="14.0" prefHeight="259.0" prefWidth="250.0" style="-fx-border-color: black; -fx-background-color: #f4f4f4;">
         <children>
            <Label layoutX="10.0" layoutY="10.0" text="Host:" />
            <TextField fx:id="txthost" layoutX="90.0" layoutY="6.0" prefWidth="150.0" text="localhost" />

            <Label layoutX="10.0" layoutY="45.0" text="Port" />
            <TextField fx:id="txtport" layoutX="90.0" layoutY="41.0" prefWidth="150.0" text="5432" />

            <Label layoutX="10.0" layoutY="80.0" text="Database" />
            <TextField fx:id="txtdb" layoutX="90.0" layoutY="76.0" prefWidth="150.0" />

            <Label layoutX="10.0" layoutY="115.0" text="User" />
            <TextField fx:id="txtuser" layoutX="90.0" layoutY="111.0" prefWidth="150.0" text="postgres" />

            <Label layoutX="10.0" layoutY="150.0" text="Password" />
            <PasswordField fx:id="txtpassword" layoutX="90.0" layoutY="146.0" prefWidth="150.0" />

            <Label layoutX="10.0" layoutY="185.0" text="Table" />
            <TextField fx:id="txttable" layoutX="90.0" layoutY="181.0" prefWidth="150.0" />
      
            <Button layoutX="60.0" layoutY="220.0" onAction="#connectDB" prefWidth="150.0" text="Connect" />
