      <ScrollPane layoutX="582.0" layoutY="291.0" prefHeight="322.0" prefWidth="242.0" style="-fx-border-color: black; -fx-background-color: #f4f4f4;">
         <content>
            <VBox fx:id="formContainer" spacing="5.0">
               <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>

      <!-- CRUD BUTTONS -->
      <Pane layoutX="27.0" layoutY="67.0" prefHeight="50.0" prefWidth="522.0" style="-fx-border-color: black; -fx-background-color: #f4f4f4;">
         <children>
            <Button layoutX="20.0" layoutY="20.0" onAction="#save" prefWidth="150.0" text="SAVE" />
            <Button layoutX="184.0" layoutY="20.0" onAction="#update" prefWidth="150.0" text="UPDATE" />
            <Button layoutX="368.0" layoutY="20.0" onAction="#delete" prefWidth="150.0" text="DELETE" />
         </children>
      </Pane>

      <!-- DATA TABLE -->
      <TableView fx:id="tbData" layoutX="14.0" layoutY="155.0" onMouseClicked="#selectRow" prefHeight="473.0" prefWidth="548.0" />
      <TextField layoutX="233.0" layoutY="24.0" prefHeight="25.0" prefWidth="111.0" text="DATABASE CRUD" />
   </children>
