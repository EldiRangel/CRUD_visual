<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx/25" 
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.mycompany.javafxcrud.ConnectionController"
            headerText="Conexión a PostgreSQL">
    <content>
        <GridPane hgap="10" vgap="10">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            
            <Label text="Host:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtHost" text="localhost" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
            
            <Label text="Puerto:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtPort" text="5432" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
            
            <Label text="Base de Datos:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtDatabase" text="postgres" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
            
            <Label text="Usuario:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtUser" text="postgres" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            
            <Label text="Contraseña:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
            <PasswordField fx:id="txtPassword" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            
            <Separator GridPane.rowIndex="5" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
            
            <Label text="Tabla:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
            <ComboBox fx:id="cmbTables" prefWidth="200" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
            <Button fx:id="btnLoadTables" text="Cargar Tablas" onAction="#loadTables" GridPane.rowIndex="6" GridPane.columnIndex="2"/>
            <ProgressIndicator fx:id="progressIndicator" visible="false" prefWidth="25" prefHeight="25" GridPane.rowIndex="6" GridPane.columnIndex="3"/>
        </GridPane>
    </content>
    <ButtonType fx:constant="OK"/>
    <ButtonType fx:constant="CANCEL"/>
</DialogPane>